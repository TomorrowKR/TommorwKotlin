<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/meal_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Enter meal name" />

    <EditText
        android:id="@+id/meal_calories_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Enter calories"
        android:inputType="number" />

    <EditText
        android:id="@+id/meal_nutrition_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Enter nutrition info" />

    <Button
        android:id="@+id/save_meal_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Meal" />

</LinearLayout>